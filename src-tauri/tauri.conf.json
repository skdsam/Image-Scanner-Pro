{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Image Scanner Pro",
  "version": "1.0.0",
  "identifier": "com.imagescannerpro.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Image Scanner Pro",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost https://asset.localhost;",
      "assetProtocol": {
        "enable": true,
        "scope": ["**", "C:\\**", "D:\\**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
